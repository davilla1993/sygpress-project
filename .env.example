# ==========================================
# Configuration pour Coolify Deployment
# ==========================================

# Port du serveur (default: 8080)
SERVER_PORT=8080

# ==========================================
# URLs de l'application
# ==========================================
# URL de base de l'application (sans slash à la fin)
# Exemple: https://sygpress.votredomaine.com
APP_BASE_URL=http://localhost:8080

# URL du serveur API (sans slash à la fin)
# En mode monorepo, c'est la même que APP_BASE_URL
# Exemple: https://sygpress.votredomaine.com
APP_SERVER_URL=http://localhost:8080

# ==========================================
# Configuration Base de données PostgreSQL
# ==========================================
# Note: La BDD doit être créée manuellement sur le VPS
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sygpress_db
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here

# Connexion JDBC complète (optionnel si DB_HOST, DB_PORT, DB_NAME sont définis)
# SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/sygpress_db

# Configuration du pool de connexions Hikari
DB_POOL_MAX_SIZE=10
DB_POOL_MIN_IDLE=5
DB_POOL_IDLE_TIMEOUT=30000

# ==========================================
# Configuration JPA/Hibernate
# ==========================================
# Mode de création du schéma (update, create, create-drop, validate, none)
HIBERNATE_DDL_AUTO=update

# Afficher les requêtes SQL (true/false) - mettre à false en production
HIBERNATE_SHOW_SQL=false
HIBERNATE_FORMAT_SQL=false

# ==========================================
# Configuration JWT (Sécurité)
# ==========================================
# Secret JWT - IMPORTANT: Changer cette valeur en production!
# Générer avec: openssl rand -base64 64
JWT_SECRET=c3lncHJlc3Mtc2VjcmV0LWtleS1mb3Itand0LXRva2VuLWdlbmVyYXRpb24tMjAyNA==

# Durée d'expiration du token JWT en millisecondes (86400000 = 24h)
JWT_EXPIRATION=86400000

# ==========================================
# Configuration Upload de fichiers
# ==========================================
FILE_UPLOAD_DIR=uploads
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# ==========================================
# Configuration Audit & Logs
# ==========================================
AUDIT_CLEANUP_ENABLED=true
AUDIT_RETENTION_DAYS=30
# Cron expression: "0 0 2 1 * ?" = Le 1er de chaque mois à 2h00
AUDIT_CLEANUP_CRON=0 0 2 1 * ?

# ==========================================
# Profil Spring actif (dev, prod)
# ==========================================
SPRING_PROFILES_ACTIVE=prod
